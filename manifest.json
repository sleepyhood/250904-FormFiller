{
  "manifest_version": 3,
  "name": "FormFiller + BOJ Extract",
  "version": "1.0.0",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus", "clipboardWrite"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/problem/*", "https://boj.kr/*"],
      "js": ["extractors/baekjoon.dom.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "FormFiller", "default_popup": "popup.html" }
}
